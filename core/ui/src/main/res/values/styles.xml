<resources>

    <style name="Widget.Theme.ChessClocks.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.ChessClocks.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="MainButton" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="LLPointsSettings" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TVTopicsSettings" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/settings_topics_text_color</item>
    </style>

    <style name="TVPointsSettings" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettinsSwitcher" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="switcher_icon_color">@color/white</item>
        <item name="switcher_off_color">@color/switcher_gray</item>
        <item name="switcher_on_color">@color/switcher_green</item>
    </style>

    <style name="LLItemsMain" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TimerAttr" parent="">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>
</resources>