    <LinearLayout
        android:id="@+id/ll_firstline"
        style="@style/LLItemsMain"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_45min"
            style="@style/MainButton"
            android:text="45|0" />

        <Button
            android:id="@+id/btn_30min0"
            style="@style/MainButton"
            android:layout_marginStart="8dp"
            android:text="30|0" />

        <Button
            android:id="@+id/btn_15min10"
            style="@style/MainButton"
            android:layout_marginStart="8dp"
            android:text="15|10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_secondline"
        style="@style/LLItemsMain"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_firstline">

        <Button
            android:id="@+id/btn_10min5"
            style="@style/MainButton"
            android:text="10|5" />

        <Button
            android:id="@+id/btn_5min3"
            style="@style/MainButton"
            android:layout_marginStart="8dp"
            android:text="5|3" />

        <Button
            android:id="@+id/btn_5min0"
            style="@style/MainButton"
            android:layout_marginStart="8dp"
            android:text="5|0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_thirdline"
        style="@style/LLItemsMain"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_secondline">

        <Button
            android:id="@+id/btn3min2"
            style="@style/MainButton"
            android:text="3|2" />

        <Button
            android:id="@+id/btn_3min"
            style="@style/MainButton"
            android:layout_marginStart="8dp"
            android:text="3|0" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/customizeTime"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            android:background="@color/coral_red"
            app:layout_constraintStart_toEndOf="@id/btn3min2"
            app:layout_constraintTop_toBottomOf="@id/logo_text">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/globe_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/animation_settings" />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>